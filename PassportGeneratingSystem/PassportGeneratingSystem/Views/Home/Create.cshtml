@model PassportGeneratingSystem.Models.NewUser

@{
    ViewData["Title"] = "Create";
    var errorMessage = TempData["Error"]?.ToString();
}

@if (errorMessage != null)
{
    <div class="alert alert-danger">
        <b>Error: </b>@errorMessage
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 rounded-4" style="width: 400px; margin-top:90px;">
        <h2 class="text-center text-primary mb-3">Register</h2>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="GivenName" class="form-label fw-bold">Given Name</label>
                <input asp-for="GivenName" class="form-control rounded-pill" placeholder="Enter Your Name" />
                <span asp-validation-for="GivenName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SureName" class="form-label fw-bold">Sure Name (Optional)</label>
                <input asp-for="SureName" class="form-control rounded-pill" placeholder="Enter Father Name" />
                <span asp-validation-for="SureName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EmailID" class="form-label fw-bold">Email Address</label>
                <input asp-for="EmailID" class="form-control rounded-pill" placeholder="Enter Email" />
                <span asp-validation-for="EmailID" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LoginID" class="form-label fw-bold">Login ID</label>
                <input asp-for="LoginID" class="form-control rounded-pill" placeholder="Create Username" />
                <span asp-validation-for="LoginID" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-bold">Password</label>
                <input asp-for="Password" class="form-control rounded-pill" type="password" placeholder="Enter New Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label fw-bold">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control rounded-pill" type="password" placeholder="Re-enter Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="text-center">
                <input type="submit" value="Register" class="btn btn-primary fw-bold rounded-pill text-center" />
            </div>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Index" class="text-decoration-none">Back to Home</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
