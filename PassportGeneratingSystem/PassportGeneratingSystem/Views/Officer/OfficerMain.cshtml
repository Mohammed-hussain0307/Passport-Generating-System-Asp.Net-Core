@{
    ViewData["Title"] = "Officer Main Page";
    var successMessage = TempData["Success"]?.ToString();
}
@if (successMessage != null)
{
    <div class="alert alert-success">
        <b>Success: </b>@successMessage
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close">
        </button>
    </div>
}
<div class="container">
    <div class="row">
        <div class="col-md-4" style="margin-left:-50px;">
            <h3 class="text-primary">Officer HomePage</h3>
            <a asp-controller="User" asp-action="AllUser" class="list-group-item list-group-item-action load-page">View Application</a>
            <a asp-controller="User" asp-action="Create" class="list-group-item list-group-item-action load-page">Add/remove Officer ID</a>
            <a asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action text-danger">Logout</a>
        </div>
        <div class="col-md-8">
            <div id="content-area">
            </div>
        </div>
    </div>
</div>
