@model List<PassportGeneratingSystem.Models.UserDetail>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Application Detail</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <h4>All Applicants</h4>
    <hr />

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Given Name</th>
                <th>Father's Name</th>
                <th>Mobile Number</th>
                <th>Email ID</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.ID</td>
                    <td>@user.GivenName</td>
                    <td>@user.FatherGivenName</td>
                    <td>@user.MobileNumber</td>
                    <td>@user.EmailID</td>
                    <td class="action-links">
                        <a href="@Url.Action("Edit", "User", new { id = user.ID })" class="btn btn-edit">Edit</a>
                        <a href="@Url.Action("Apply", "User", new { id = user.ID })" class="btn btn-apply">Apply Booking</a>
                        <a href="@Url.Action("Delete", "User", new { id = user.ID })" class="btn btn-delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <script src="~/js/site.js"></script>
</body>
</html>
